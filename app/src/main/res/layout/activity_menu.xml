<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical|center_horizontal">

<!-- A textview which states the Title in the top of the screen -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:text="Physical Snake Game"
        android:id="@+id/textView"
        android:textSize="55sp"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

<!-- Creates the New Game button. onClick "ToGame" is the method made
in the main activity to make something happen when the button is clicked. -->
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/NewGameButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="25sp"
        android:onClick="ToGame"/>

<!-- Creates the How to play button. OnClick = same as above -->
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="How to Play"
        android:id="@+id/HowtoPlayButton"
        android:layout_marginBottom="97dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="25sp"
        android:onClick="ToInstructions" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="@string/HighScore"
        android:id="@+id/Overall_Score"
        android:textSize="30sp"
        android:textColor="#ff000000"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="@string/Score"
        android:id="@+id/textView2"
        android:textColor="#ff000000"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/Overall_Score"
        android:layout_toEndOf="@+id/Overall_Score"
        android:layout_alignTop="@+id/Overall_Score"
        android:layout_marginTop="10dp" />
</RelativeLayout>
